<Window x:Name="ContactWindow" x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:cmd="clr-namespace:View.ViewModel"
        mc:Ignorable="d"
        Title="Contacts" Height="450" Width="500" RenderTransformOrigin="0.5,1" MinHeight="450" 
        MinWidth="500">
    
    <Grid x:Name="ContactcsGrid" Margin="15,15,15,15" >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="31"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <GroupBox x:Name="EditGroupBox" Header="Edit Contact" Margin="3"  Grid.Column="0" 
                  Grid.Row="0">
            <StackPanel x:Name="EditStackPanel">
                <TextBlock Text="Name:" Margin="3"/>
                <TextBox Margin="3" Text="{Binding Name, 
                    UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="Phone Number:" Margin="3"/>
                <TextBox Margin="3" Text="{Binding PhoneNumber, 
                    UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="Email:" Margin="3"/>
                <TextBox Margin="3" Text="{Binding Email, 
                    UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
        </GroupBox>
        <GroupBox x:Name="ReadGroupBox" Header="Read Contact" Margin="3"  Grid.Column="1" 
                  Grid.Row="0">
            <StackPanel x:Name="ReadStackPanel">
                <TextBlock Text="Name:" Margin="3"/>
                <TextBlock Margin="3" FontWeight="Bold" Text="{Binding Name, 
                    UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="Phone Number:" Margin="3"/>
                <TextBlock Margin="3" FontWeight="Bold" Text="{Binding PhoneNumber, 
                    UpdateSourceTrigger=PropertyChanged}"/>
                <TextBlock Text="Email:" Margin="3"/>
                <TextBlock Margin="3" FontWeight="Bold" Text="{Binding Email, 
                    UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
        </GroupBox>
        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Margin="3" 
                    Height="25" Width="75" 
                    Content="Save"
                    CommandParameter="{Binding}">
                <Button.Command>
                    <cmd:SaveCommand></cmd:SaveCommand>
                </Button.Command>
            </Button>
            <Button Margin="3" 
                    Height="25" Width="75" 
                    Content="Load" 
                    CommandParameter="{Binding}">
                <Button.Command>
                    <cmd:LoadCommand></cmd:LoadCommand>
                </Button.Command>
            </Button>
        </StackPanel>
    </Grid>
</Window>
